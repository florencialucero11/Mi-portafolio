---
const { t, lang } = Astro.props;

import DarkModeToggle from '../components/DarkModeToggle.jsx';
import DownloadCV from '../components/DownloadCV.astro';
import LanguageToggle from '../components/LanguageToggle.jsx';
---
<header class="flex justify-between items-center py-4 px-8 bg-gradient-to-r from-bgDarker to-bgDarkest shadow-md">
  <div class="text-lg font-semibold text-primary">Florencia Lucero</div>
  <nav class="hidden md:flex gap-4">
    <a href="#about" class="text-textLight hover:text-primaryLight transition-colors">{t.about}</a>
    <a href="#projects" class="text-textLight hover:text-primaryLight transition-colors">{t.projects}</a>
    <a href="#labs" class="text-textLight hover:text-primaryLight transition-colors">{t.labs || "Labs"}</a>
    <a href="#contact" class="text-textLight hover:text-primaryLight transition-colors">{t.contact}</a>
  </nav>
  <div class="flex gap-2">
    <DownloadCV />
    <LanguageToggle lang={lang} client:load />
    <DarkModeToggle client:load />
  </div>
</header>

---
import ContactForm from '../components/ContactForm.jsx';

const { t } = Astro.props;

const contactInfo = {
  email: "florenciadevamatias@gmail.com",
  linkedin: "https://www.linkedin.com/in/florencialucerodeva/",
  github: "https://github.com/florencialucero11"
};
---
<section
  id="contact"
  class="relative py-20 px-8 max-w-7xl mx-auto rounded-3xl bg-gradient-to-b from-primaryLight shadow-xl overflow-hidden"
  aria-label="SecciÃ³n de contacto"
>



  <div class="flex flex-col md:flex-row gap-16 max-w-5xl mx-auto text-light">

    <div class="flex-1 flex flex-col justify-center animate-fadeInLeft">
      <h2 class="text-5xl font-extrabold mb-8 text-primaryLight bg-gradient-to-r from-bgDarker to-primary-500 bg-clip-text text-transparent drop-shadow-glow">
        {t.title}
      </h2>

      <p class="mb-12 text-lg leading-relaxed max-w-lg">
        {t.description}
      </p>

      <ul class="space-y-6 text-lg">
        <li class="flex items-center gap-3">
          <img src="/icons/gmail.svg" alt="Email" class="w-6 h-6" />
          <a
            href={`mailto:${contactInfo.email}`}
            class="hover:underline hover:text-primaryLight transition-colors"
            aria-label="Enviar email"
          >
            {contactInfo.email}
          </a>
        </li>
        <li class="flex items-center gap-3">
          <img src="/icons/linkedIn.svg" alt="LinkedIn" class="w-6 h-6" />
          <a
            href={contactInfo.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="hover:underline hover:text-primaryLight transition-colors"
            aria-label="Visitar LinkedIn"
          >
            Perfil profesional
          </a>
        </li>
        <li class="flex items-center gap-3">
          <img src="/icons/github.svg" alt="GitHub" class="w-6 h-6" />
          <a
            href={contactInfo.github}
            target="_blank"
            rel="noopener noreferrer"
            class="hover:underline hover:text-primaryLight transition-colors"
            aria-label="Visitar GitHub"
          >
             {t.projectsLinkText}
          </a>
        </li>
      </ul>
    </div>

    <ContactForm t={t} contactInfo={contactInfo} client:load />
  </div>
</section>

<style>
  .drop-shadow-glow {
    filter: drop-shadow(0 0 6px #3b82f6);
  }
  @media (min-width: 768px) {
    section#contact > div {
      gap: 5rem;
    }
  }
</style>
